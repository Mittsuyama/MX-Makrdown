{
  "productName": "MX-AMRKDOWN",
  "name": "MX-MARKDWON",
  "description": "a markdown editor with vim",
  "author": "MITSUYAMA",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "build": {
    "appId": "com.mitsuyama@163.app",
    "mac": {
      "category": "editor"
    }
  },
  "scripts": {
    "package": "electron-packager ./ MX-MARKDWON --arch=x64 --out ./distApp",
    "start": "umi dev",
    "build": "umi build",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@iktakahiro/markdown-it-katex": "^3.1.0",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.2.2",
    "codemirror": "^5.54.0",
    "electron-packager": "^14.2.1",
    "fs-extra": "^9.0.0",
    "highlight.js": "^10.0.3",
    "katex": "^0.11.1",
    "lint-staged": "^10.0.7",
    "markdown-it": "^11.0.0",
    "markdown-it-anchor": "^5.3.0",
    "markdown-it-container": "^2.0.0",
    "markdown-it-deflist": "^2.0.3",
    "markdown-it-kbd": "^2.0.0",
    "markdown-it-mark": "^3.0.0",
    "markdown-it-multimd-table": "^4.0.2",
    "markdown-it-task-checkbox": "^1.0.6",
    "markdown-it-texmath": "^0.6.7",
    "markdown-it-underline": "^1.0.1",
    "mousetrap": "^1.6.5",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-codemirror": "^1.0.0",
    "react-dom": "^16.12.0",
    "umi": "^3.2.2",
    "uuid": "^8.1.0",
    "yorkie": "^2.0.0"
  },
  "devDependencies": {
    "@types/react-codemirror": "^1.0.3",
    "electron": "^9.0.0",
    "electron-builder": "^22.6.1"
  }
}
